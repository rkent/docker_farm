pipeline {
    agent any
    stages {
        stage('Clone') {
            steps {
                sh 'env'
                git branch: 'ros2-rkent', url: 'https://github.com/rkent/rosindex'
            }
        }
        stage('Build Image') {
            steps {
                sh 'docker/build.sh'
            }
        }
        stage('Build website') {
            steps {
                sh 'docker/run.sh make build'
            }
        }
        stage('Sync website') {
            steps {
                sh 'rsync -ra /ros2/jenkins/workspace/rosindex/_site /ros2/rosindex/'
            }
        }
    }
}

pipeline {
    agent any
    stages {
        stage('Clone') {
            steps {
                sh 'env'
                git branch: 'ros2-test', url: 'https://github.com/rkent/rosindex'
            }
        }
        stage('Build Image') {
            steps {
                sh 'ls'
                sh 'docker/build.sh make -d clean
            }
        }
        stage('Build website') {
            steps {
                dir('docker') {
                    sh 'pwd'
                    sh 'ls'
                    sh './run.sh make build'
                }
            }
        }
    }
}
